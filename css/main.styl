html, body
	margin 0
	padding 0
	height 100%

.content_block
	width 100%
	height 100%
	overflow hidden

.swiper-container
	width 100%
	height 100%
	.swiper-slide
		font-size 18pt
		background-color grey
	.swiper-pagination
		width 0
		right auto
		left 10px!important
		.swiper-pagination-bullet-active
			background-color white
	.swiper-container-h
		.swiper-slide
			width 70%
			background-color green

#plan_map
	width 100%
	height 100%

.leaflet-container
	background-color black!important
	img
		max-width none!important
		width auto!important
		height auto!important

.navigate_block
	z-index 9999
	width 2px
	height 200px
	background-color white
	position fixed
	right 30px
	top 0
	bottom 0
	margin auto
	user-select none
	.navigate_center
		top 40px
		position relative
		.navigate_gap
			width 60px
			height 120px
			border-radius 60px
			position relative
			left -29px
			// background-color red
			.gap_inner
				width 20px
				height 20px
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				margin auto
				border-radius 30px
				background-color white