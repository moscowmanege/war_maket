html, body
	margin 0
	padding 0
	height 100%

html, body, .content-block, .content-item, .content-inner
	height 100%

.menu-block
	position fixed
	top 0
	width 100%
	height 40px
	background-color black
	z-index 9999999
	.menu-inner
		width 1280px
		margin 0 auto
		box-sizing border-box
		padding-top 10px
		.menu-item
			text-transform uppercase
			color rgb(173, 136, 32)
			text-decoration none
			margin-right 20px
			&:hover
				color white

.content-block
	width 100%
	.content-footer
		background-color black
		width 100%
		height 120px
		position relative
		color white
		.footer-inner
			width 1280px
			margin 0 auto
	.content-item
		width 100%
		background-color lightgrey
		position relative
		.content-title
			font-size 24pt
			background-color black
			color rgb(173, 136, 32)
			display inline-block
			padding 5px
			padding-left 10px
			padding-right 10px
			box-sizing border-box
			text-transform uppercase
			margin-bottom 20px
		.logo
			top 0
			left 0
			right 0
			bottom 0
			margin auto
			width 80%
			display block
			position absolute
			z-index 1
		video
			z-index 0
			position absolute
			top 0
			left 0
			min-width 100%
			min-height 100%
			width auto
			height auto
		&.contacts
			padding-top 40px
			.content-inner
				max-width 1280px
				margin 0 auto
		&.about
			padding-top 40px
			background-color rgb(173, 136, 32)
			.content-inner
				max-width 1280px
				margin 0 auto
				.content-columns
					columns 4 320px
					column-gap 2em
					p
						margin 0
						padding 0
						padding-bottom 20px

.swiper-container
	width 100%
	height 100%
	.swiper-slide
		font-size 18pt
		background-color grey
	.swiper-pagination
		width 0
		right auto
		left 10px!important
		.swiper-pagination-bullet-active
			background-color white
	&.swiper-container-h .swiper-slide
		width 40%
		// height 80%
		background-color green

#plan_map
	width 100%
	height 100%

.leaflet-container
	background-color black!important
	img
		max-width none!important
		width auto!important
		height auto!important