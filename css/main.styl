html, body
	margin 0
	padding 0

html, body, .content-block, .content-item, .content-inner
	height 100%

.menu-block
	position fixed
	z-index 9999999
	top 0
	width 100%
	height 40px
	text-shadow: 1px 1px 2px black, 0 0 1em black;
	background-color rgba(0, 0, 0, 0.6)
	.menu-inner
		max-width 1280px
		margin 0 auto
		padding-left 40px
		padding-right 40px
		.menu-items
			padding-top 12px
			.menu-item
				text-transform uppercase
				color rgb(173, 136, 32)
				text-decoration none
				transition color .2s ease-in-out
				&:hover
					transition color .2s ease-in-out
					color white
			&.left
				float left
				.menu-item
					margin-right 30px
			&.right
				float right
				.menu-item
					margin-left 30px

.content-block
	width 100%
	.content-footer
		background-color black
		width 100%
		height 120px
		position relative
		color rgb(173, 136, 32)
		.footer-inner
			max-width 1280px
			margin 0 auto
			padding-left 40px
			padding-right 40px
	.content-item
		width 100%
		background-color lightgrey
		position relative
		box-sizing border-box
		.content-inner
			max-width 1280px
			margin 0 auto
			padding-left 40px
			padding-right 40px
			.content-title
				font-size 24pt
				color rgb(173, 136, 32)
				display inline-block
				box-sizing border-box
				text-transform uppercase
				margin-bottom 40px
				max-width 320px
				span
					display inline-block
					background-color black
					padding 2px
					padding-left 10px
					padding-right 10px
					margin-right -5px
					margin-bottom 3px

		&.video
			position fixed
			background-color black
			height 100%
			overflow hidden
			video
				overflow hidden
				z-index 0
				position fixed
				min-width 100%
				min-height 100%
				width auto
				height auto

				// top 0
				// left 0

				top 50%
				left 50%
				transform: translateX(-50%) translateY(-50%);

		&.main
			background-color transparent
			.logo
				top 0
				left 0
				right 0
				bottom 0
				margin auto
				width 80%
				display block
				position absolute
				z-index 1

		&.heads
			.content-inner
				max-width none
				width 100%
				padding 0
				.head-name
					color white
					font-size 24pt
					display inline-block
					box-sizing border-box
					text-transform uppercase
					max-width 320px
					span
						display inline-block
						background-color rgb(173, 136, 32)
						padding 2px
						padding-left 10px
						padding-right 10px
						margin-right -5px
						margin-bottom 3px
				.head-status
					margin-top 5px
					color black
					font-size 10pt
					line-height 12pt
					max-width 320px
					text-transform uppercase
					color rgb(173, 136, 32)
				.head-quote
					font-size 14pt
					line-height 16pt
					// color rgb(173, 136, 32)
					&:before
						font-size 62pt
						line-height 62pt
						display block
						content '«'
						margin-left -40px
					&:after
						font-size 62pt
						line-height 62pt
						display block
						position relative
						left 100%
						content '»'

		&.map
			padding-top 40px
			.content-inner
				height 0
				position relative
				z-index 999

		&.about
			padding-top 40px
			padding-bottom 40px
			background-color rgb(173, 136, 32)
			height auto
			.content-columns
				hyphens auto
				columns 4 320px
				column-gap 2em
				column-rule 5px solid black
				font-size 14pt
				line-height 16pt
				p
					margin 0
					padding 0
					padding-bottom 20px

		&.schedule
			padding-top 40px
			padding-bottom 40px
			height auto
			background-color lightgrey
			.content-schedule
				position relative
				.schedule-item
					width 50%
					min-height 180px
					position relative
					box-sizing border-box
					padding 10px
					padding-bottom 0
					margin-bottom 10px
					&:last-child
						margin-bottom 0
					&:nth-child(odd)
						left 0
						border-right 5px solid black
						// background-color rgb(173, 136, 32)
					&:nth-child(even)
						left 50%
						border-left 5px solid black
						margin-left -5px
						// background-color maroon
					.schedule-date
						font-size 24pt
						line-height 26pt
						padding-bottom 20px
					.schedule-event
						padding-bottom 20px
						.event-title
							text-transform uppercase
							font-size 16pt
							line-height 18pt
							padding-bottom 10px
						.event-description
							font-size 12pt
							line-height 14pt

		&.contacts
			padding-top 40px
			.content-inner
				height 0
				position relative
				z-index 999
				.content-box
					width 380px
					height 480px
					float right
					color white
					padding 10px
					box-sizing border-box
					background-color rgba(0, 0, 0, 0.6)
					p
						margin 0
						padding 0
						padding-bottom 20px

.swiper-container
	width 100%
	height 100%
	.swiper-slide
		padding 40px
		padding-right 60px
		padding-left 60px
		box-sizing border-box
		border-right 5px solid black
		&:first-child
			border-left 5px solid black
	.swiper-pagination
		width 0
		right auto
		left 10px!important
		.swiper-pagination-bullet-active
			background-color white
	&.swiper-container-h .swiper-slide
		cursor default
		width 40%
		min-width 320px
		// background-color maroon

#plan-canvas
#map-canvas
	width 100%
	height 100%
	position absolute
	top 0

.leaflet-container
	background-color black!important
	img
		max-width none!important
		width auto!important
		height auto!important